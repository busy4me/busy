download_busy4me_files () {
	cd /opt/$PROJECT
	echo -e "\e[35m Download new files... \n\ wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/* \e[0m"
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/busy
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/busy-config
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/busy-functions
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/config
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/frame00
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/frame01
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/frame02
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/frame99
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/update
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/update2
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/windows-init
