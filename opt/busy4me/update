#!/bin/bash
# Update all files
# set -x
PROJECT="busy4me"
SCRIPT="update"
VERSION="1902.01"
#export PATH=$PATH:/opt/$PROJECT
BUSYUSER="busyman"

LOGFILE=/var/log/busy4me.log
BACKUP=/var/backups/busy4me
BACKUP_2=/var/backups/busy
source /opt/busy4me/busy-functions # global functions
source /opt/busy4me/fb/fb-config # fb variables from there

root_check () {
if [ "$USER" != "root" ]
	then
		echo -e "\e[31mRun this script as root! exit...\e[0m"
		echo "Run this script as root! exit..." | logline
#		exit
# not running from service level
	else
		echo -e "\e[32mStart OK ...\e[0m" | logline
fi
}

chmod 777 /var/log/busy4me.log

# create directory with access for users if not exists
mkdir /opt/busy 2>/dev/null
chmod 777 /opt/busy
mkdir /opt/busy/{files,images,sounds,videos} 2>/dev/null
chmod 777 /opt/busy/{files,images,sounds,videos}
# create empty file for blank clipboard if not exists
touch /opt/busy/files/blank 2>/dev/null

# create backup directories
mkdir $BACKUP 2>/dev/null
mkdir $BACKUP/fb 2>/dev/null
mkdir $BACKUP_2 2>/dev/null
mkdir $BACKUP_2/{sound,images,files,videos} 2>/dev/null

logline() {
    while IFS= read -r line; do
        echo "$(date +%F' '%T) $USER $SCRIPT - $line"
    done
}
UPDATE_FILE=$1
UPDATE_FILE_2=$2

mkdir /opt/$PROJECT 2>/dev/null
mkdir /tmp/$PROJECT-tmp 2>/dev/null
cd /opt/$PROJECT

# update root and user bash preference files
update_preferences () {
rm /root/.bash_aliases
rm /root/.bashrc
rm -rf /home/$BUSYUSER/.bash_aliases
rm -rf /home/$BUSYUSER/.bashrc
echo -e "\e[32m Download bash preferences files ... \n\ wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/* \e[0m"
	wget -nv -O /root/.bash_aliases --no-check-certificate http://busy4.me/busy/root/.bash_aliases
	wget -nv -O /root/.bashrc --no-check-certificate http://busy4.me/busy/root/.bashrc
	wget -nv -O /home/busyman/.bash_aliases --no-check-certificate http://busy4.me/busy/home/busyman/.bash_aliases
	wget -nv -O /home/busyman/.bashrc --no-check-certificate http://busy4.me/busy/home/busyman/.bashrc
}

chown busyman:busyman /home/$BUSYUSER/.*

# create backup in tmp
TMP_DIR="/tmp/$PROJECT-tmp/$(date +%Y-%m-%d--%H-%M-%S)"
mkdir $TMP_DIR
cp -R /opt/$PROJECT/* $TMP_DIR


# delete all project files and folders
delete_all_project_files () {
rm -rf /opt/$PROJECT/*
}

# delete chrome busyman data
echo -e "\e[33m Clean google-chrome busyman data... \e[0m"
	rm -rf /home/$BUSYUSER/.config/google-chrome/Default; echo -e "\e[36m remove .config/google-chrome/Default"
	rm -rf /home/$BUSYUSER/.cache/google-chrome; echo -e "remove .cache/google-chrome"
	rm -rf /home/$BUSYUSER/.config/google-chrome/Singleton*; echo -e "remove .config/google-chrome/Singleton* \e[0m"

# download big files
download_big_files () {
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy/files/chromedriver -O /opt/busy/files/chromedriver | logline
	chmod +x /opt/busy/files/chromedriver
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy/images/wallpaper.jpg -O /opt/busy/images/wallpaper.jpg | logline
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy/images/wall_black_with_vertical_logo.jpg -O /opt/busy/images/wall_black_with_vertical_logo.jpg | logline
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy/sounds/cafe_noise.mp3 -O /opt/busy/sounds/cafe_noise.mp3 | logline
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy/sounds/calm_piano.mp3 -O /opt/busy/sounds/calm_piano.mp3 | logline
}

# download binaries
download_binaries () {
	# update tint2 binaries
	wget -nv --no-check-certificate http://busy4.me/busy/usr/bin/tint2 -O /usr/bin/tint2 | logline
	chmod +x /usr/bin/tint2
	wget -nv --no-check-certificate http://busy4.me/busy/usr/bin/tint2conf -O /usr/bin/tint2conf | logline
	chmod +x /usr/bin/tint2conf
}

tint2rc () {
	mkdir /home/busyman/.config/tint2
	chown busyman:busyman /home/busyman/.config/tint2
	wget -nv --no-check-certificate http://busy4.me/busy/home/busyman/.config/tint2/tint2rc -O /home/busyman/.config/tint2/tint2rc | logline
	chown busyman:busyman /home/busyman/.config/tint2/*
#	killall -SIGUSR1 tint2 # reload tint2
	export DISPLAY=:0
	t_proc=$(ps -e | grep tint2)
	if [[ t_proc == *"tint2"* ]]; then
		killall -SIGUSR1 tint2 # reload tint2
	else
		pkill tint2
		if [ "$USER" = "root" ]; then
			export XAUTHORITY=/home/busyman/.Xauthority
			runuser -l busyman -c 'export DISPLAY=:0 && tint2 -c /home/busyman/.config/tint2/tint2rc &'
		else
			tint2 -c /home/busyman/.config/tint2/tint2rc &
		fi
	fi

}

openbox_config () {
	wget -nv --no-check-certificate http://busy4.me/busy/home/busyman/.config/openbox/rc.xml -O /home/busyman/.config/openbox/rc.xml | logline
	chown busyman:busyman /home/busyman/.config/openbox/rc.xml
	export DISPLAY=:0
	export XAUTHORITY=/home/busyman/.Xauthority
	openbox --reconfigure
}

