	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/xterm-transparent
	wget -nv --no-check-certificate http://busy4.me/busy/opt/busy4me/zenity
	wget -nv --no-check-certificate http://busy4.me/var/www/html/index.html -O /var/www/html/index.html
}

